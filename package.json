{
  "name": "selina-fillinger",
  "version": "1.0.0",
  "description": "Selina Fillinger - Award-winning Playwright and Screenwriter",
  "scripts": {
    "build:css": "postcss src/css/tailwind.css -o _site/css/style.css",
    "watch:css": "postcss src/css/tailwind.css -o _site/css/style.css --watch",
    "watch:eleventy": "eleventy --serve",
    "start": "npm-run-all build:css --parallel watch:*",
    "build": "npm run build:css && eleventy",
    "clean": "rm -rf _site"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@tailwindcss/postcss": "^4.1.17",
    "autoprefixer": "^10.4.22",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "tailwindcss": "^4.1.17"
  }
}
